<Window x:Class="PlantApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized">
    <DockPanel Background="AliceBlue">
        <StackPanel DockPanel.Dock="Top" Background="MediumSpringGreen" Height="50" Orientation="Horizontal">
            <Button Style="{StaticResource ToolBarButton}" Margin="20 2 5 2" x:Name="btnNotifications" Click="btnNotifications_Click">
                <TextBlock Text="Notifications" HorizontalAlignment="Center"  />
            </Button>
            <Button Style="{StaticResource ToolBarButton}" Margin="20 2 5 2" x:Name="btnPlantSpecies" Click="btnPlantSpecies_Click">
                <TextBlock Text="Plant species" HorizontalAlignment="Center"  />
            </Button>
            <Button Style="{StaticResource ToolBarButton}" Margin="20 2 5 2" x:Name="btnPlants" Click="btnPlants_Click">
                <TextBlock Text="My plants" HorizontalAlignment="Center"  />
            </Button>
            <Button Style="{StaticResource ToolBarButton}" Margin="20 2 5 2" x:Name="btnWateringReports" Click="btnWateringReports_Click">
                <TextBlock Text="Watering reports" HorizontalAlignment="Center"  />
            </Button>
        </StackPanel>
        <ContentControl x:Name="contentControl"/>
    </DockPanel>
</Window>
