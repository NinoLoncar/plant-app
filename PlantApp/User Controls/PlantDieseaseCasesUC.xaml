<UserControl x:Class="PlantApp.User_Controls.PlantDieseaseCasesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:PlantApp.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dtgDiseaseCases" Style="{StaticResource DataGridStyle}" Margin="50,50,50,50" >
        </DataGrid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Margin="0 0 20 0" Style="{StaticResource LabelStyle}">
                    Disease:
                </Label>
                <ComboBox MinWidth="200" x:Name="cbxDiseases"  FontSize="16"  FontFamily="Arial" Height="30"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Margin="0 0 20 0" Style="{StaticResource LabelStyle}">
                    Plant:
                </Label>
                <ComboBox MinWidth="200" x:Name="cbxPlants"  FontSize="16"  FontFamily="Arial" Height="30"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Margin="0 0 20 0" Style="{StaticResource LabelStyle}">
                    Infected at:
                </Label>
                <xctk:DateTimePicker MinWidth="250" HorizontalContentAlignment="Left" x:Name="dtpInfectedAt" FontSize="16" FontFamily="Arial" Height="30"/>
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button  x:Name="btnDelete" Click="btnDelete_Click" Content="Delete" Width="100" Height="30" Style="{StaticResource ButtonStyle}"/>
                <Button  x:Name="btnAdd" Click="btnAdd_Click" Content="Add" Width="100" Height="30" Style="{StaticResource ButtonStyle}"/>
                <Button  x:Name="btnRecover" Click="btnRecover_Click" Content="Recover" Width="100" Height="30" Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
            <Label  x:Name="lblMessage" Foreground="Red" Grid.Row="5" VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Hidden" Style="{StaticResource LabelStyle}">
                Fill the form
            </Label>
        </Grid>
    </Grid>
</UserControl>
